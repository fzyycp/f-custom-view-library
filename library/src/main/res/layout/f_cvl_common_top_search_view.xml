<?xml version="1.0" encoding="utf-8"?><!-- 通用顶部视图 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_cvl_common_top_view_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/f_cvl_common_top_view_height"
    android:background="@color/f_cvl_common_top_view_bg_color">

    <ImageView
        android:id="@+id/f_cvl_common_top_view_left_iv"
        android:layout_width="@dimen/f_cvl_common_top_view_lr_iv_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:padding="@dimen/f_cvl_common_top_view_lr_iv_padding"
        android:src="@drawable/f_cvl_common_top_view_left_back"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/f_cvl_common_top_view_left_tv"
        android:visibility="gone"
        android:maxWidth="@dimen/f_cvl_common_top_view_lr_tv_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/f_cvl_common_top_view_lr_tv_margin"
        android:textColor="@color/f_cvl_common_top_view_lr_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_lr_tv_size"
        android:gravity="start"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/f_cvl_common_top_view_lr_tv_margin" />

    <TextView
        android:id="@+id/f_cvl_common_top_view_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:paddingRight="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:title="@string/f_cvl_common_top_view_center_default_text"
        android:maxLines="1"
        android:textColor="@color/f_cvl_common_top_view_center_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_center_tv_size"/>
    <RelativeLayout
        android:id="@+id/f_cvl_common_top_view_search_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:paddingRight="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:background="@drawable/f_cvl_common_top_view_search_bg" >

        <ImageView
            android:id="@+id/common_top_search_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:src="@drawable/f_cvl_common_top_search_view_search_icon" />

        <ImageView
            android:id="@+id/common_top_search_delete_iv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/edittext_delete" />

        <EditText
            android:id="@+id/common_top_search_key_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/common_top_search_icon_iv"
            android:layout_toLeftOf="@id/common_top_search_delete_iv"
            android:background="@null"
            android:layout_centerVertical="true"
            android:hint="@string/search_tips"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="@color/black_666"
            android:textSize="@dimen/text_size_12"
            android:maxLines="1" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/f_cvl_common_top_view_right_iv"
        android:visibility="gone"
        android:layout_width="@dimen/f_cvl_common_top_view_lr_iv_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:padding="@dimen/f_cvl_common_top_view_lr_iv_padding"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/f_cvl_common_top_view_right_tv"
        android:visibility="gone"
        android:maxWidth="@dimen/f_cvl_common_top_view_lr_tv_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/f_cvl_common_top_view_lr_tv_margin"
        android:textColor="@color/f_cvl_common_top_view_lr_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_lr_tv_size"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/f_cvl_common_top_view_lr_tv_margin" />

</RelativeLayout>