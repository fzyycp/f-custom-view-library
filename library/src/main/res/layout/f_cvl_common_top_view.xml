<?xml version="1.0" encoding="utf-8"?><!-- 通用顶部视图 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_cvl_common_top_view_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/f_cvl_common_top_view_height"
    android:gravity="center_vertical"
    android:background="@color/f_cvl_common_top_view_bg_color">

    <ImageView
        android:id="@+id/f_cvl_common_top_view_left_iv"
        android:layout_width="@dimen/f_cvl_common_top_view_lr_iv_width"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:padding="@dimen/f_cvl_common_top_view_lr_iv_padding"
        android:src="@drawable/f_cvl_common_top_view_left_back"/>

    <TextView
        android:id="@+id/f_cvl_common_top_view_left_tv"
        android:visibility="gone"
        android:maxWidth="@dimen/f_cvl_common_top_view_lr_tv_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/f_cvl_common_top_view_lr_tv_margin"
        android:textColor="@color/f_cvl_common_top_view_lr_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_lr_tv_size"
        android:gravity="start"/>

    <TextView
        android:id="@+id/f_cvl_common_top_view_center_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:paddingRight="@dimen/f_cvl_common_top_view_center_tv_padding"
        android:title="@string/f_cvl_common_top_view_center_default_text"
        android:maxLines="1"
        android:gravity="center"
        android:textColor="@color/f_cvl_common_top_view_center_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_center_tv_size"/>

    <ImageView
        android:id="@+id/f_cvl_common_top_view_right_iv"
        android:visibility="gone"
        android:layout_width="@dimen/f_cvl_common_top_view_lr_iv_width"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:padding="@dimen/f_cvl_common_top_view_lr_iv_padding" />

    <TextView
        android:id="@+id/f_cvl_common_top_view_right_tv"
        android:visibility="gone"
        android:maxWidth="@dimen/f_cvl_common_top_view_lr_tv_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/f_cvl_common_top_view_lr_tv_margin"
        android:textColor="@color/f_cvl_common_top_view_lr_tv_color"
        android:textSize="@dimen/f_cvl_common_top_view_lr_tv_size"
        android:gravity="end"/>

</LinearLayout>