<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_cvl_action_sheet_grid_item_ll"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/f_cvl_action_sheet_grid_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/f_cvl_action_sheet_grid_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/f_cvl_action_sheet_item_color"
        android:textSize="@dimen/f_cvl_action_sheet_item_size" />
</LinearLayout>
