<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="animator" format="boolean" />
    <attr name="decoration" format="enum">
        <enum name="HORIZONTAL" value="0" />
        <enum name="VERTICAL" value="1" />
