        <attr name="itemTitleColor" />
        <attr name="itemPlaceSize" />
        <attr name="itemPlaceColor" />
        <attr name="groupHeaderSuspensionShow" format="boolean" />
        <attr name="groupHeaderHeight" format="dimension" />
        <attr name="groupHeaderLeftPadding" format="dimension" />
        <attr name="groupHeaderBgColor" format="color" />
        <attr name="groupHeaderTitleSize" format="dimension" />
        <attr name="groupHeaderTitleColor" format="color" />
